<?xml version="1.0" encoding="UTF-8"?>
<menubar>
	<menu>
		<label>File</label>
		<menuitem>
			<label>Quit</label>
			<icon>application-exit</icon>
			<command>quit</command>
			<shortcut>Ctrl+q</shortcut>
		</menuitem>
	</menu>
	<menu>
		<label>Edit</label>
		<menuitem>
			<label>Select all medias</label>
			<command>mediaview-select-all</command>
			<shortcut>Ctrl+a</shortcut>
		</menuitem>
		<menuitem>
			<label>Invert selection</label>
			<command>mediaview-invert-selection</command>
			<shortcut>Crl+i</shortcut>
		</menuitem>
	</menu>
	<menu>
		<label>View</label>
		<menu>
			<label>Media</label>
			<menuitem>
				<label>Zoom in</label>
				<command>mediashowarea-scale-increase</command>
				<shortcut>+</shortcut>
			</menuitem> 
			<menuitem>
				<label>Zoom out</label>
				<command>mediashowarea-scale-decrease</command>
				<shortcut>-</shortcut>
			</menuitem> 
			<menuitem>
				<label>Fit to screen</label>
				<command>mediashowarea-scale-fit</command>
				<shortcut>Ctrl+0</shortcut>
			</menuitem>
		</menu>
	</menu> 
</menubar>

